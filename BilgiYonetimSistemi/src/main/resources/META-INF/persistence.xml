<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    <!-- Define Persistence Unit -->
    <persistence-unit name="BYS_PU" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
<!--        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>-->
        <jta-data-source>BYS</jta-data-source>
<!--        <exclude-unlisted-classes>false</exclude-unlisted-classes>-->
        <properties>
            <property name="hibernate.transaction.jta.platform" value="org.hibernate.service.jta.platform.internal.SunOneJtaPlatform"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.SQLServerDialect"/>
            <property name="hibernate.enable_lazy_load_no_trans" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>
<!--            <property name="hibernate.search.autoregister_listeners" value="false"/>-->
<!--            <property name="hibernate.archive.autodetection" value="class"/>-->
<!--            <property name="hibernate.ejb.packagesToScan"-->
<!--                      value="tr.bel.gaziantep.bysweb.moduls.engelsizler.entity,-->
<!--                      tr.bel.gaziantep.bysweb.moduls.genel.entity,-->
<!--                      tr.bel.gaziantep.bysweb.moduls.sistemyonetimi.entity"/>-->
        </properties>
    </persistence-unit>
</persistence>
