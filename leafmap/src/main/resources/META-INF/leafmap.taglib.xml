<?xml version="1.0" encoding="UTF-8"?>
<facelet-taglib xmlns="https://jakarta.ee/xml/ns/jakartaee"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-facelettaglibrary_4_0.xsd"
                version="4.0">

    <namespace>http://kurtomerfaruk.com/ui</namespace>

    <tag>
        <description><![CDATA[Open Street Map using leaflet https://leafletjs.com/]]></description>
        <tag-name>map</tag-name>
        <component>
            <component-type>com.kurtomerfaruk.leafmap.component.LMap</component-type>
            <renderer-type>com.kurtomerfaruk.leafmap.component.LMapRenderer</renderer-type>
        </component>
        <attribute>
            <description>
                <![CDATA[Name of the client side widget.]]>
            </description>
            <name>widgetVar</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description>
                <![CDATA[An org.primefaces.model.MapModel instance.]]>
            </description>
            <name>model</name>
            <required>false</required>
            <type>org.primefaces.model.map.MapModel</type>
        </attribute>
        <attribute>
            <description>
                <![CDATA[Inline style of the map container.]]>
            </description>
            <name>style</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description>
                <![CDATA[Style class of the map container.]]>
            </description>
            <name>styleClass</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description>
                <![CDATA[Center point of the map. Required.]]>
            </description>
            <name>center</name>
            <required>true</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description>
                <![CDATA[Defines the initial zoom level. Default is 8.]]>
            </description>
            <name>zoom</name>
            <required>true</required>
            <type>java.lang.Integer</type>
        </attribute>
        <attribute>
            <description>
                <![CDATA[Display zoom control on a map. Default is true.]]>
            </description>
            <name>zoomControl</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
        </attribute>
        <attribute>
            <description>
                <![CDATA[When using OpenStreetMap data, you are required to provide credit and display copyright notice.]]>
            </description>
            <name>attribution</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description>
                <![CDATA[Url of a custom tile provider.]]>
            </description>
            <name>tileUrl</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description>
                <![CDATA[Defines draggability of map. Default is true.]]>
            </description>
            <name>draggable</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
        </attribute>
        <attribute>
            <description>
                <![CDATA[Javascript callback to execute when a point on map is clicked.]]>
            </description>
            <name>onPointClick</name>
            <required>false</required>
            <type>java.lang.String</type>
        </attribute>
        <attribute>
            <description>
                <![CDATA[Controls scrollwheel zooming on the map. Default is true.]]>
            </description>
            <name>scrollWheel</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
        </attribute>
        <attribute>
            <description>
                <![CDATA[When zooming in on the map, it adds a loading icon to the map. The default value is true.]]>
            </description>
            <name>loadingControl</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
        </attribute>
        <attribute>
            <description>
                <![CDATA[The control used to make the map full screen. The default value is true.]]>
            </description>
            <name>fullScreen</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
        </attribute>
    </tag>
    <tag>
        <tag-name>heatmap</tag-name>
        <component>
            <component-type>com.kurtomerfaruk.leafmap.component.LHeatMap</component-type>
            <renderer-type>com.kurtomerfaruk.leafmap.component.LHeatMapRenderer</renderer-type>
        </component>
        <attribute>
            <name>points</name>
            <required>true</required>
            <type>java.util.List</type>
        </attribute>
    </tag>
</facelet-taglib>